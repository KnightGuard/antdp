{
  "name": "antdp-project",
  "version": "1.0.0",
  "private": true,
  "description": "Ant Design Project",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "install": "npm run install:pkg && npm run install:example",
    "install:pkg": "lerna bootstrap --scope @antdp/*",
    "install:example": "lerna bootstrap --scope @example/*",
    "build": "npm run build:pkg",
    "build:pkg": "lerna exec npm run build --scope @antdp/*",
    "watch": "lerna run watch --stream",
    "watch:lib": "lerna run --scope @antdp/* watch --stream",
    "version": "lerna version --force-publish --no-push --no-git-tag-version",
    "publish": "lerna publish from-package",
    "start": "lerna exec npm run start",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "clean": "lerna clean",
    "tsbb": "tsbb",
    "lerna": "lerna"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "author": "jaywcjlove",
  "license": "MIT",
  "dependencies": {
    "lerna": "3.20.2",
    "lint-staged": "10.0.7",
    "husky": "4.2.5",
    "prettier": "1.19.1",
    "tsbb": "1.7.2"
  }
}
